---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
// import { dateRange } from "@lib/utils";
import {
  SITE,
  HOME,
  //LINKS
} from "@consts";

const blog = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter((project) => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, SITE.NUM_PROJECTS_ON_HOMEPAGE);
---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <div class="space-y-16">
      <section>
        <article class="space-y-4 flex flex-col">
          <h2 class="text-lg">
            We’re a consultancy focused on building systems around real business
            workflows
          </h2>
          <span>
            While much of our day-to-day work involves application development,
            we don’t think of ourselves as “just building web apps”. An
            application is only one visible component in a larger operational
            system - alongside data flows, internal processes, external
            touchpoints, and the human realities of how work actually gets done.
          </span>

          <span>
            Most early-stage and growing organisations operate within a web of
            fragmented, manual, and fragile processes:
          </span>
          <ul>
            <li>spreadsheets that double as databases</li>
            <li>tools that don’t quite fit the workflow</li>
            <li>ad-hoc automation held together by a shoe string</li>
          </ul>

          <span>
            Our work lives inside this web. We help teams replace brittle
            processes with systems that are coherent, reliable, and
            understandable - not only from a technical perspective, but from an
            operational one.
          </span>

          <br />

          <!-- <h2 class="text-lg">We believe in local-first software</h2>
          <span>
            Our work is inspired by the idea that apps should work offline, sync
            seamlessly, and respect user autonomy. We see local-first as the new
            default - and we feel a responsibility to promote these values in
            everything we build.
          </span> -->
        </article>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h2 class="font-semibold text-black dark:text-white">
            Some things we've been building
          </h2>
          <Link href="/projects"> See all projects </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            projects.map((project) => (
              <li>
                <ArrowCard entry={project} />
              </li>
            ))
          }
        </ul>

        <br />

        <span>
          Got a project in mind?
          <Link href="mailto:team@codemyriad.io" external> Hire us </Link>
        </span>
      </section>

      <section class="animate space-y-6">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h5 class="font-semibold text-black dark:text-white">Latest posts</h5>
          <Link href="/blog"> See all posts </Link>
        </div>
        <ul class="flex flex-col gap-4">
          {
            blog.map((post) => (
              <li>
                <ArrowCard entry={post} />
              </li>
            ))
          }
        </ul>
      </section>

      <!-- <section class="space-y-4">
        <ul class="flex flex-wrap gap-2">
          {
            LINKS.map((LINK, ix, arr) => (
              <li class="flex gap-x-2 text-nowrap">
                <Link
                  href={LINK.HREF}
                  external
                  aria-label={`${SITE.NAME} on ${LINK.NAME}`}
                >
                  {LINK.NAME}
                </Link>
                {ix !== arr.length - 1 ? "/" : ""}
              </li>
            ))
          }
        </ul>
      </section> -->

      <!-- <section class="text-xl">
        <img src="/favicon.png" />
      </section> -->
    </div>
  </Container>
</PageLayout>
