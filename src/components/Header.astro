---
import Container from "@components/Container.astro";
import Link from "@components/Link.astro";
import { SITE } from "@consts";
---

<header>
  <Container>
    <div class="flex flex-wrap items-center gap-y-3 justify-between">
      <Link href="/" underline={false} class="flex items-center">
        <img
          src="/logo.svg"
          alt={`${SITE.NAME} logo`}
          class="h-7 w-auto"
          loading="eager"
        />
      </Link>
      <nav
        class="flex flex-wrap items-center gap-5 text-xs sm:text-sm text-[#FAFAFA]/60"
      >
        <Link href="#services" underline={false}>Services</Link>
        <Link href="#projects" underline={false}>Projects</Link>
        <Link href="#blog" underline={false}>Blog</Link>
        <Link href="#contact" underline={false}>Contact</Link>
      </nav>
    </div>
  </Container>
</header>
